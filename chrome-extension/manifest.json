{
    "manifest_version": 3,
    "name": "ScreenVision Chatbot",
    "version": "1.1",
    "description": "A chatbot that sees and understands everything on your screen with live updates.",
    "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
      }
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": ["pdf.worker.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }